{
  "mcpServers": {
    "fetch": {
      "command": "docker",
      "args": ["run", "--rm", "--network", "pen-shop-demo_pen-shop-network", "mcp/fetch"]
    },
    "brave": {
      "command": "docker", 
      "args": ["run", "--rm", "--network", "pen-shop-demo_pen-shop-network", "mcp/brave"]
    },
    "mongodb": {
      "command": "docker",
      "args": ["run", "--rm", "--network", "pen-shop-demo_pen-shop-network", "--env", "MONGODB_URI=mongodb://mongodb:27017/penstore", "mcp/mongodb"]
    },
    "curl": {
      "command": "docker",
      "args": ["run", "--rm", "--network", "pen-shop-demo_pen-shop-network", "mcp/curl"]
    },
    "resend": {
      "command": "docker",
      "args": ["run", "--rm", "--network", "pen-shop-demo_pen-shop-network", "mcp/resend"]
    },
    "postgresql": {
      "command": "docker",
      "args": ["run", "--rm", "--network", "pen-shop-demo_pen-shop-network", "mcp/postgresql"]
    }
  }
}
